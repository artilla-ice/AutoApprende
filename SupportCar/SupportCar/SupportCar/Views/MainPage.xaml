<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:SupportCar.Views"
            x:Class="SupportCar.Views.MainPage">
    <TabbedPage.Children>
        <NavigationPage Icon="information.png">
            <x:Arguments>
                <views:AboutPage/>
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Icon="qr_code.png">
            <x:Arguments>
                <views:ScanPage />
            </x:Arguments>
        </NavigationPage>
        <NavigationPage  Icon="refresh_iconn.png">
            <x:Arguments>
                <views:RecentsPage />
            </x:Arguments>
        </NavigationPage>
        <NavigationPage  Icon="home_icon.png">
            <x:Arguments>
                <views:HomePage />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>